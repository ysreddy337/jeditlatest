<?xml version="1.0"?>

<!DOCTYPE MODE SYSTEM "xmode.dtd">

<MODE NAME="jsp">
	<PROPS>
		<PROPERTY NAME="commentStart" VALUE="&lt;!--" />
		<PROPERTY NAME="commentEnd" VALUE="--&gt;" />
		<PROPERTY NAME="filenameGlob" VALUE="*.jsp" />
	</PROPS>
	<RULES IGNORE_CASE="TRUE">
		<!-- whitespace: (space and tab) -->
		<WHITESPACE> </WHITESPACE>
		<WHITESPACE>	</WHITESPACE>

		<!-- SGML comment -->
		<SPAN TYPE="COMMENT1">
			<BEGIN>&lt;!--</BEGIN>
			<END>--&gt;</END>
		</SPAN>

		<!-- markup tags -->
		<SPAN TYPE="MARKUP" DELEGATE="TAGS">
			<BEGIN>&lt;/</BEGIN>
			<END>&gt;</END>
		</SPAN>

		<SPAN TYPE="LABEL">
			<BEGIN>&lt;%=</BEGIN>
			<END>%&gt;</END>
		</SPAN>
		
		<SPAN TYPE="LABEL">
			<BEGIN>&lt;%</BEGIN>
			<END>%&gt;</END>
		</SPAN>

		<!-- JavaScript -->
		<SPAN TYPE="MARKUP" DELEGATE="javascript::MAIN">
			<BEGIN>&lt;SCRIPT</BEGIN>
			<END>&lt;/SCRIPT&gt;</END>
		</SPAN>

		<!-- stylesheet -->
		<SPAN TYPE="MARKUP" DELEGATE="css::MAIN">
			<BEGIN>&lt;STYLE&gt;</BEGIN>
			<END>&lt;/STYLE&gt;</END>
		</SPAN>

		<SPAN TYPE="MARKUP" DELEGATE="TAGS">
			<BEGIN>&lt;</BEGIN>
			<END>&gt;</END>
		</SPAN>

		<!-- SGML entities -->
		<SPAN TYPE="LITERAL2" NO_WORD_BREAK="TRUE">
			<BEGIN>&amp;</BEGIN>
			<END>;</END>
		</SPAN>
	</RULES>

	<RULES SET="TAGS" DEFAULT="MARKUP">
		<!-- whitespace: (space and tab) -->
		<WHITESPACE> </WHITESPACE>
		<WHITESPACE>	</WHITESPACE>

		<SPAN TYPE="LITERAL1">
			<BEGIN>"</BEGIN>
			<END>"</END>
		</SPAN>

		<SPAN TYPE="LITERAL1">
			<BEGIN>'</BEGIN>
			<END>'</END>
		</SPAN>

		<SEQ TYPE="OPERATOR">=</SEQ>
		
		<KEYWORDS IGNORE_CASE="TRUE">
			<KEYWORD1>html</KEYWORD1>
			<KEYWORD1>head</KEYWORD1>
			<KEYWORD1>meta</KEYWORD1>
			<KEYWORD1>body</KEYWORD1>
			<KEYWORD1>table</KEYWORD1>
			<KEYWORD1>tr</KEYWORD1>
			<KEYWORD1>td</KEYWORD1>
			<KEYWORD2>link</KEYWORD2>
			<KEYWORD2>alink</KEYWORD2>
			<KEYWORD2>vlink</KEYWORD2>
			<KEYWORD2>bgcolor</KEYWORD2>
			<KEYWORD2>id</KEYWORD2>
			<KEYWORD2>name</KEYWORD2>
			<KEYWORD2>type</KEYWORD2>
			<KEYWORD2>value</KEYWORD2>
			<KEYWORD2>size</KEYWORD2>
			<KEYWORD2>border</KEYWORD2>
			<KEYWORD2>cellpadding</KEYWORD2>
			<KEYWORD2>cellspacing</KEYWORD2>
			<KEYWORD2>width</KEYWORD2>
			<KEYWORD2>height</KEYWORD2>
			<KEYWORD2>class</KEYWORD2>
			<KEYWORD2>nowrap</KEYWORD2>
			<KEYWORD2>valign</KEYWORD2>
			<KEYWORD2>align</KEYWORD2>
			<KEYWORD2>hspace</KEYWORD2>
			<KEYWORD2>src</KEYWORD2>
			<KEYWORD2>type</KEYWORD2>
			<KEYWORD2>name</KEYWORD2>
			<KEYWORD2>value</KEYWORD2>
			<KEYWORD2>size</KEYWORD2>
			<KEYWORD2>colspan</KEYWORD2>
			<KEYWORD2>rowspan</KEYWORD2>
		</KEYWORDS>
	</RULES>
</MODE>
